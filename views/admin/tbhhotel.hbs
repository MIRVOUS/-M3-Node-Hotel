  <div class="col-lg-12 mt-5 align-middle">
    <h1 class="text-center mt-5">Ubah Informasi Hotel</h1>
    <div class="col-md-12">
      <form action="/admin/ubah/hotel" method="post">
        <input type="hidden" name="_id" value="{{value._id}}">
        <div class="form-group">
          <input type="text" name="nama" class="form-control" placeholder="nama hotel..." value="{{value.nama}}">
        </div>
        <div class="form-group">
          <input type="text" name="alamat" class="form-control" placeholder="alamat hotel..." value="{{value.alamat}}">
        </div>
        <div class="form-group">
          <input type="text" name="kontak" class="form-control" placeholder="kontak hotel..." value="{{value.kontak}}">
        </div>
        <div class="form-group">
          <button class="btn btn-primary">Ubah</button>
        </div>
      </form>
    </div>

  </div>
